def soma(a, b):
    return a + b

def main():
    print("Calculadora de Soma")

    while True:
        try:
            num1 = float(input("Digite o primeiro número: "))
            num2 = float(input("Digite o segundo número: "))
        except ValueError:
            print("Entrada inválida. Por favor, digite números válidos.")
            continue

        resultado = soma(num1, num2)
        print(f"A soma de {num1} e {num2} é {resultado}")

        proxima = input("Deseja realizar outra soma? (sim/não): ").strip().lower()
        if proxima != 'sim':
            print("Obrigado por usar a calculadora. Até mais!")
            break

if __name__ == "__main__":
    main()
def divide(a, b):
    """Função para realizar a divisão e lidar com divisão por zero."""
    if b != 0:
        return a / b
    else:
        return "Não é possível dividir por zero"

def main():
    """Função principal que gerencia a interação com o usuário."""
    print("Calculadora Simples de Divisão")

    while True:
        try:
            # Solicita os números ao usuário
            num1 = float(input("Digite o dividendo: "))
            num2 = float(input("Digite o divisor: "))

            # Realiza a divisão
            resultado = divide(num1, num2)

            # Exibe o resultado
            if isinstance(resultado, str):
                print(resultado)  # Mensagem de erro para divisão por zero
            else:
                print(f"O resultado de {num1} dividido por {num2} é {resultado:.2f}")

        except ValueError:
            print("Entrada inválida. Por favor, insira números válidos.")

        # Pergunta se o usuário quer realizar outra divisão
        proxima = input("Deseja realizar outra divisão? (sim/não): ").strip().lower()
        if proxima != 'sim':
            print("Obrigado por usar a calculadora. Até mais!")
            break

if __name__ == "__main__":
    main()
